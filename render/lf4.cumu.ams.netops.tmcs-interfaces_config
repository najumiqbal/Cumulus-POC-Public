################################
# LOOPBACK CONFIGURATION START #
################################
auto lo
iface lo inet loopback
    address 10.75.65.70/32
    clagd-vxlan-anycast-ip 10.76.65.34
##############################
# LOOPBACK CONFIGURATION END #
##############################


###########################
# VRF CONFIGURATION START #
###########################
auto cs-data
iface cs-data
    vrf-table auto
auto cs-storage
iface cs-storage
    vrf-table auto
auto cs-guest
iface cs-guest
    vrf-table auto
auto cs-public
iface cs-public
    vrf-table auto
auto cs-mgmt
iface cs-mgmt
    vrf-table auto
#########################
# VRF CONFIGURATION END #
#########################


##########################################
# PHYSICAL INTERFACE CONFIGURATION START #
##########################################
auto swp2
iface swp2
    alias uplink-spine-2
    mtu 9216
 
auto swp10s0
iface swp10s0
    alias link-srv2.cumu.ams-e1
    link-speed 10000
    mtu 9216
 
auto swp1
iface swp1
    alias uplink-spine-1
    mtu 9216
 
auto swp15
iface swp15
    alias link-lf3
    mtu 9216
 
auto swp16
iface swp16
    alias link-lf3
    mtu 9216
 
########################################
# PHYSICAL INTERFACE CONFIGURATION END #
########################################


######################################
# BOND INTERFACE CONFIGURATION START #
######################################
auto clag-srv2
iface clag-srv2
    alias link to srv2
    clag-id 2
    bridge-access 67
    bond-slaves swp10s0
    bond-mode 802.3ad
    bond-min-links 1
    bond-miimon 100
    mstpctl-portadminedge yes
    mstpctl-bpduguard yes
####################################
# BOND INTERFACE CONFIGURATION END #
####################################


##########################################
# PEERLINK INTERFACE CONFIGURATION START #
##########################################
auto peerlink
iface peerlink
    bond-slaves swp15 swp16
    mtu 9216

auto peerlink.4094
iface peerlink.4094
    address 169.254.1.2/30
    clagd-peer-ip 169.254.1.1
    clagd-backup-ip 10.76.35.5 vrf mgmt
    clagd-sys-mac 44:38:39:FF:40:34
    clagd-enable yes
    clagd-priority 2000
########################################
# PEERLINK INTERFACE CONFIGURATION END #
########################################


########################################
# BRIDGE INTERFACE CONFIGURATION START #
########################################
auto bridge
iface bridge
    bridge-vlan-aware yes
    bridge-ports peerlink vni66 vni67 vni68 vni69 vni70 clag-srv2
    bridge-vids 66 67 68 69 70
######################################
# BRIDGE INTERFACE CONFIGURATION END #
######################################

######################################
# VLAN INTERFACE CONFIGURATION START #
######################################
iface vlan66
    alias cs-data-66
    vrf cs-data
    address 10.76.66.253/24
    address-virtual 00:00:5e:00:01:66 10.76.66.254/24
    vlan-raw-device bridge
    vrf cs-data
    vlan-id 66
iface vlan67
    alias cs-storage-67
    vrf cs-storage
    address 10.76.67.253/24
    address-virtual 00:00:5e:00:01:67 10.76.67.254/24
    vlan-raw-device bridge
    vrf cs-storage
    vlan-id 67
iface vlan68
    alias cs-guest-68
    vrf cs-guest
    address 10.76.68.253/24
    address-virtual 00:00:5e:00:01:68 10.76.68.254/24
    vlan-raw-device bridge
    vrf cs-guest
    vlan-id 68
iface vlan69
    alias cs-public-69
    vrf cs-public
    address 10.76.69.253/24
    address-virtual 00:00:5e:00:01:69 10.76.69.254/24
    vlan-raw-device bridge
    vrf cs-public
    vlan-id 69
iface vlan70
    alias cs-mgmt-70
    vrf cs-mgmt
    address 10.76.70.253/24
    address-virtual 00:00:5e:00:01:70 10.76.70.254/24
    vlan-raw-device bridge
    vrf cs-mgmt
    vlan-id 70
